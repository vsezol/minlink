{
  "name": "bff",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bff/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "bff:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "bff:build:development"
        },
        "production": {
          "buildTarget": "bff:build:production"
        }
      }
    },
    "docker": {
      "defaultConfiguration": "production",
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build -f apps/bff/Dockerfile . -t vsezol/minlink-bff",
          "docker tag vsezol/minlink-bff vsezol/minlink-bff:latest",
          "docker push vsezol/minlink-bff:latest"
        ]
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    }
  }
}
